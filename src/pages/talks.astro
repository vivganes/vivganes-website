<Layout title="Talks - Vivek Ganesan">
  <!-- Hero -->
  <section class="page-hero">
    <div class="container">
      <div class="page-hero-content">
        <span class="tag">Conference Speaking</span>
        <h1>Talks & <span class="text-gradient">Presentations</span></h1>
