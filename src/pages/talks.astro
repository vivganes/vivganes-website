    <div class="container">
      <div class="video-wrapper">
        <iframe
          src="https://www.youtube.com/embed/videoseries?list=PLtQT0a2cx00ZLO9sclfoWeoeE4JyWtCtD"
          title="Vivek's Talks Playlist"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen>
        </iframe>
      </div>
    </div>
  </section>

  <!-- Timeline -->
  <section class="section timeline-section">
    <div class="container">
      <div class="timeline-layout">
        <!-- Sticky Nav -->
        <nav class="timeline-nav">
          <div class="timeline-nav-inner">
            <h3>Jump to Year</h3>
            <ul class="year-list">
              {years.map(year => (
                <li>
                  <a href={`#year-${year}`} class="year-link">{year}</a>
                </li>
              ))}
            </ul>
          </div>
        </nav>

        <!-- Timeline Content -->
        <div class="timeline-content">
          {years.map(year => (
            <div id={`year-${year}`} class="year-section">
              <div class="year-header">
                <span class="year-badge">{year}</span>
                <span class="year-count">{talks[year].length} talks</span>
              </div>

              <div class="talks-grid">
                {talks[year].map(talk => (
                  <article class="talk-card">
                    <div class="talk-content">
                      <h3 class="talk-title">
                        {talk.link ? (
                          <a href={talk.link} target="_blank" rel="noopener">
                            {talk.title}
                            {talk.video && (
                              <svg class="video-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M23 7l-7 5 7 5V7z"></path>
                                <rect x="1" y="5" width="15" height="14" rx="2" ry="2" fill="none" stroke="currentColor" stroke-width="2"></rect>
                              </svg>
                            )}
                          </a>
                        ) : talk.title}
                      </h3>
                      {talk.venue && <p class="talk-venue">{talk.venue}</p>}
                    </div>
                    {talk.link && (
                      <a href={talk.link} target="_blank" rel="noopener" class="talk-link" aria-label="View talk">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                          <polyline points="15 3 21 3 21 9"></polyline>
                          <line x1="10" y1="14" x2="21" y2="3"></line>
                        </svg>
                      </a>
                    )}
                  </article>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section cta-section">
    <div class="container">
      <div class="invite-card">
        <div class="invite-content">
          <h2>Want me to speak at your event?</h2>
          <p>I'm available for keynotes, workshops, and panel discussions on AI, software engineering, and technical agility.</p>
