</Layout>

<style>
  /* Page Hero */
  .page-hero {
    padding: var(--space-4xl) 0 var(--space-2xl);
    background: linear-gradient(to bottom, var(--color-bg-secondary), var(--color-bg));
  }

  .page-hero-content {
    max-width: 700px;
  }

  .page-hero .tag {
    margin-bottom: var(--space-lg);
  }

  .page-hero h1 {
    margin-bottom: var(--space-lg);
  }

  .page-hero p {
    font-size: 1.25rem;
    line-height: 1.7;
  }

  /* Video Section */
  .video-section {
    padding-top: 0;
  }

  .video-wrapper {
    position: relative;
    width: 100%;
    max-width: 800px;
    padding-bottom: 56.25%;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  /* Timeline Layout */
  .timeline-layout {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: var(--space-3xl);
  }

  /* Timeline Nav */
  .timeline-nav {
    position: relative;
  }

  .timeline-nav-inner {
    position: sticky;
    top: calc(var(--header-height) + var(--space-xl));
  }

  .timeline-nav h3 {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
    margin-bottom: var(--space-lg);
  }

  .year-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .year-link {
    display: block;
    padding: var(--space-sm) var(--space-md);
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    border-radius: var(--radius-md);
    transition: all var(--transition-fast);
  }

  .year-link:hover {
    background: var(--color-bg-tertiary);
    color: var(--color-text);
  }

  /* Year Section */
  .year-section {
    margin-bottom: var(--space-3xl);
    scroll-margin-top: calc(var(--header-height) + var(--space-xl));
  }

  .year-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-md);
    border-bottom: 1px solid var(--color-border);
  }

  .year-badge {
    font-size: 1.5rem;
    font-weight: 800;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .year-count {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  /* Talks Grid */
  .talks-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .talk-card {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
    padding: var(--space-lg);
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }

  .talk-card:hover {
    border-color: var(--color-border-hover);
    box-shadow: var(--shadow-md);
    transform: translateX(4px);
  }

  .talk-content {
    flex: 1;
    min-width: 0;
  }

  .talk-title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: var(--space-xs);
    color: var(--color-text);
  }

  .talk-title a {
    color: inherit;
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .talk-title a:hover {
    color: var(--color-primary);
  }

  .video-icon {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .talk-venue {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .talk-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    color: var(--color-text-muted);
    transition: all var(--transition-fast);
    flex-shrink: 0;
  }

  .talk-link:hover {
    background: var(--gradient-subtle);
    color: var(--color-primary);
  }

  /* Invite Card */
  .invite-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-3xl);
    text-align: center;
  }

  .invite-card h2 {
    margin-bottom: var(--space-md);
  }

  .invite-card p {
    max-width: 500px;
    margin: 0 auto var(--space-xl);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .timeline-layout {
      grid-template-columns: 1fr;
    }

    .timeline-nav {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .talk-card {
      flex-direction: column;
      align-items: flex-start;
    }

    .talk-link {
      align-self: flex-end;
    }

    .invite-card {
      padding: var(--space-xl);
    }
  }
</style>

<script>
  // Smooth scroll for year links
  document.querySelectorAll('.year-link').forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const href = link.getAttribute('href');
      const target = document.querySelector(href);
      target?.scrollIntoView({ behavior: 'smooth' });
    });
  });

  // Highlight active year in nav
  const yearSections = document.querySelectorAll('.year-section');
  const yearLinks = document.querySelectorAll('.year-link');

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        const id = entry.target.id;
        yearLinks.forEach(link => {
          link.classList.toggle('active', link.getAttribute('href') === `#${id}`);
        });
      }
    });
  }, { rootMargin: '-20% 0% -80% 0%' });

  yearSections.forEach(section => observer.observe(section));
</script>

<style>
  .year-link.active {
    background: var(--gradient-subtle);
    color: var(--color-primary);
  }
</style>
