    padding: var(--space-4xl) 0 var(--space-2xl);
    background: linear-gradient(to bottom, var(--color-bg-secondary), var(--color-bg));
  }

  .page-hero-content {
    max-width: 700px;
  }

  .page-hero .tag {
    margin-bottom: var(--space-lg);
  }

  .page-hero h1 {
    margin-bottom: var(--space-lg);
  }

  .page-hero p {
    font-size: 1.25rem;
    line-height: 1.7;
  }

  /* Section Header */
  .section-header {
    margin-bottom: var(--space-2xl);
    text-align: center;
