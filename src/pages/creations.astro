---
import Layout from '../layouts/Layout.astro';

const products = [
  {
    name: "Kanbanstr",
    description: "A modern Kanban board application for personal productivity and team collaboration. Built with simplicity and efficiency in mind.",
    url: "https://kanbanstr.com",
    logo: "https://kanbanstr.com/kanbanstr-card-image.png",
    category: "Productivity"
  },
  {
    name: "Zapddit",
    description: "Discover and engage with Reddit content in a whole new way. Stay on top of trending discussions and communities.",
    url: "https://zapddit.com",
    logo: "https://zapddit.com/assets/icons/logo-without-text-zapddit.svg",
    category: "Social"
  },
  {
    name: "Empty Chairs",
    description: "Discover and connect with opportunities in the business world.",
    url: "https://emptychairs.biz/",
    logo: "/images/emptychairs-logo.svg",
    category: "Business"
  }
];

const organization = {
  name: "Ampyard",
  description: "A SaaS product studio building and shipping products that solve real problems. Home to multiple successful products including Facequest, Notesally, Greeniemart, Risksumo, and ProxyBuy.",
  url: "https://ampyard.com",
  logo: "https://ampyard.com/assets/img/logo.png",
  products: ["Facequest", "Notesally", "Zapddit", "Greeniemart", "Risksumo", "ProxyBuy", "Kanbanstr"]
};
---

<Layout title="Creations - Vivek Ganesan">
  <!-- Hero -->
  <section class="page-hero">
    <div class="container">
      <div class="page-hero-content">
        <span class="tag">Products & Ventures</span>
        <h1>My <span class="text-gradient">Creations</span></h1>
        <p>Building and shipping SaaS products that solve real problems. From ideation to production, hands-on product development.</p>
      </div>
    </div>
  </section>

  <!-- Products Section -->
  <section class="section products-section">
    <div class="container">
      <div class="section-header">
        <h2>Featured Products</h2>
        <p>Products I've built and shipped to real users.</p>
      </div>

      <div class="products-grid">
        {products.map(product => (
          <article class="product-card">
            <div class="product-header">
              <div class="product-logo">
                <img src={product.logo} alt={`${product.name} logo`} loading="lazy" />
              </div>
              <span class="product-category">{product.category}</span>
            </div>
            <div class="product-content">
              <h3>{product.name}</h3>
              <p>{product.description}</p>
            </div>
            <div class="product-footer">
              <a href={product.url} target="_blank" rel="noopener" class="product-link">
                <span>Visit {product.name}</span>
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                  <polyline points="15 3 21 3 21 9"></polyline>
                  <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Organization Section -->
  <section class="section org-section">
    <div class="container">
      <div class="org-card">
        <div class="org-visual">
          <div class="org-logo-wrapper">
            <img src={organization.logo} alt="Ampyard logo" class="org-logo" />
          </div>
          <div class="org-products-badges">
            {organization.products.map(product => (
              <span class="org-product-badge">{product}</span>
            ))}
          </div>
        </div>

        <div class="org-content">
          <span class="tag">Organization</span>
          <h2>{organization.name}</h2>
          <p>{organization.description}</p>
          <a href={organization.url} target="_blank" rel="noopener" class="btn btn-primary">
            <span>Visit Ampyard</span>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Philosophy Section -->
  <section class="section philosophy-section">
    <div class="container">
      <div class="philosophy-content">
        <span class="tag">Building Philosophy</span>
        <h2>How I Build Products</h2>

        <div class="philosophy-grid">
          <div class="philosophy-card">
            <div class="philosophy-icon">
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                <polyline points="22 4 12 14.01 9 11.01"></polyline>
              </svg>
            </div>
            <h3>Solve Real Problems</h3>
            <p>Every product starts with a genuine pain point. If it doesn't solve a real problem, it's not worth building.</p>
          </div>

          <div class="philosophy-card">
            <div class="philosophy-icon">
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
            </div>
            <h3>Ship Fast, Iterate</h3>
            <p>Get to market quickly, gather real feedback, and improve. Perfection is the enemy of progress.</p>
          </div>

          <div class="philosophy-card">
            <div class="philosophy-icon">
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
              </svg>
            </div>
            <h3>Quality Matters</h3>
            <p>Fast doesn't mean sloppy. Maintain engineering excellence even while moving quickly.</p>
          </div>

          <div class="philosophy-card">
            <div class="philosophy-icon">
              <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="9" cy="7" r="4"></circle>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
              </svg>
            </div>
            <h3>User-Centric</h3>
            <p>Build for users, not for technology. The best product is the one people actually want to use.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section cta-section">
    <div class="container">
      <div class="collab-card">
        <div class="collab-content">
          <h2>Have an idea? Let's build together.</h2>
          <p>I'm always interested in collaborating on projects that solve meaningful problems.</p>
          <a href="https://linkedin.com/in/vivganes/" target="_blank" class="btn btn-primary">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            Connect on LinkedIn
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Page Hero */
  .page-hero {
    padding: var(--space-4xl) 0 var(--space-2xl);
    background: linear-gradient(to bottom, var(--color-bg-secondary), var(--color-bg));
  }

  .page-hero-content {
    max-width: 700px;
  }

  .page-hero .tag {
    margin-bottom: var(--space-lg);
  }

  .page-hero h1 {
    margin-bottom: var(--space-lg);
  }

  .page-hero p {
    font-size: 1.25rem;
    line-height: 1.7;
  }

  /* Section Header */
  .section-header {
    margin-bottom: var(--space-2xl);
  }

  .section-header h2 {
    margin-bottom: var(--space-sm);
  }

  /* Products Section */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--space-xl);
  }

  .product-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    display: flex;
    flex-direction: column;
    transition: all var(--transition-base);
  }

  .product-card:hover {
    border-color: var(--color-border-hover);
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .product-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: var(--space-lg);
  }

  .product-logo {
    width: 64px;
    height: 64px;
    border-radius: var(--radius-md);
    overflow: hidden;
    background: var(--color-bg-tertiary);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-logo img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .product-category {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-primary);
    padding: var(--space-xs) var(--space-md);
    background: var(--gradient-subtle);
    border-radius: var(--radius-full);
  }

  .product-content {
    flex: 1;
    margin-bottom: var(--space-lg);
  }

  .product-content h3 {
    font-size: 1.25rem;
    margin-bottom: var(--space-md);
  }

  .product-content p {
    font-size: 0.9375rem;
    line-height: 1.7;
  }

  .product-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-weight: 600;
    color: var(--color-primary);
    padding: var(--space-md) 0;
    border-top: 1px solid var(--color-border);
  }

  .product-link:hover {
    text-decoration: underline;
  }

  /* Organization Section */
  .org-section {
    background: var(--color-bg-secondary);
  }

  .org-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-3xl);
  }

  .org-visual {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-xl);
  }

  .org-logo-wrapper {
    width: 200px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .org-logo {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .org-products-badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-sm);
  }

  .org-product-badge {
    font-size: 0.75rem;
    font-weight: 500;
    padding: var(--space-xs) var(--space-md);
    background: var(--color-bg-tertiary);
    border-radius: var(--radius-full);
    color: var(--color-text-secondary);
  }

  .org-content .tag {
    margin-bottom: var(--space-md);
  }

  .org-content h2 {
    margin-bottom: var(--space-lg);
  }

  .org-content p {
    font-size: 1.0625rem;
    line-height: 1.8;
    margin-bottom: var(--space-xl);
  }

  /* Philosophy Section */
  .philosophy-content {
    text-align: center;
  }

  .philosophy-content .tag {
    margin-bottom: var(--space-md);
  }

  .philosophy-content > h2 {
    margin-bottom: var(--space-3xl);
  }

  .philosophy-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-xl);
    text-align: left;
  }

  .philosophy-card {
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    transition: all var(--transition-base);
  }

  .philosophy-card:hover {
    border-color: var(--color-border-hover);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .philosophy-icon {
    width: 52px;
    height: 52px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-subtle);
    color: var(--color-primary);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-lg);
  }

  .philosophy-card h3 {
    font-size: 1rem;
    margin-bottom: var(--space-md);
  }

  .philosophy-card p {
    font-size: 0.9375rem;
    line-height: 1.7;
  }

  /* Collab Card */
  .collab-card {
    background: var(--gradient-primary);
    border-radius: var(--radius-xl);
    padding: var(--space-3xl);
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .collab-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(ellipse at top right, rgba(255,255,255,0.2) 0%, transparent 60%);
  }

  .collab-content {
    position: relative;
    z-index: 1;
  }

  .collab-card h2 {
    color: white;
    margin-bottom: var(--space-md);
  }

  .collab-card p {
    color: rgba(255,255,255,0.9);
    font-size: 1.125rem;
    max-width: 500px;
    margin: 0 auto var(--space-xl);
  }

  .collab-card .btn-primary {
    background: white;
    color: var(--color-primary-dark);
  }

  .collab-card .btn-primary:hover {
    background: rgba(255,255,255,0.9);
    box-shadow: var(--shadow-lg);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .org-card {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .org-content {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .org-content p {
      text-align: center;
    }
  }

  @media (max-width: 640px) {
    .org-card {
      padding: var(--space-xl);
    }

    .collab-card {
      padding: var(--space-xl);
    }
  }
</style>
